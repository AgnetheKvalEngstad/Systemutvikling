<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Scene fill="#f5e1b9" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="no.ntnu.idatt1002.demo.income.IncomeController">
   <GridPane style="-fx-background-color: F5E1B9;">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      </rowConstraints>
      <children>
         <AnchorPane prefHeight="459.0" prefWidth="587.0">
            <children>
               <PieChart fx:id="pieChart" layoutX="35.0" layoutY="120.0" prefHeight="273.0" prefWidth="229.0" style="-fx-background-color: D8AF7F;" />
               <CheckBox fx:id="salaryChecked" layoutX="276.0" layoutY="145.0" mnemonicParsing="false" onAction="#salaryChecked" text="Salary" textFill="#8e7d69">
                  <font>
                     <Font name="Arial" size="15.0" />
                  </font></CheckBox>
               <CheckBox fx:id="investmentChecked" layoutX="276.0" layoutY="186.0" mnemonicParsing="false" onAction="#investmentChecked" text="Investment" textFill="#8e7d69">
                  <font>
                     <Font name="Arial" size="15.0" />
                  </font></CheckBox>
               <CheckBox fx:id="loanChecked" layoutX="276.0" layoutY="221.0" mnemonicParsing="false" onAction="#loanChecked" text="Loan" textFill="#8e7d69">
                  <font>
                     <Font name="Arial" size="15.0" />
                  </font></CheckBox>
               <CheckBox fx:id="otherIncomeChecked" layoutX="276.0" layoutY="257.0" mnemonicParsing="false" onAction="#otherIncomeChecked" text="Other" textFill="#8e7d69">
                  <font>
                     <Font name="Arial" size="15.0" />
                  </font></CheckBox>
               <Button fx:id="editIncomeCategory" layoutX="423.0" layoutY="133.0" mnemonicParsing="false" onAction="#editCategoryButtonPushed" prefHeight="26.0" prefWidth="115.0" style="-fx-background-color: D8AF7F;" text="Edit categories">
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font></Button>
               <Button fx:id="editIncome" layoutX="424.0" layoutY="182.0" mnemonicParsing="false" onAction="#editIncomeButtonPushed" prefHeight="26.0" prefWidth="104.0" style="-fx-background-color: D8AF7F;" text="Edit income">
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font></Button>
               <Button fx:id="viewExpenses" layoutX="423.0" layoutY="233.0" mnemonicParsing="false" onAction="#goToExpenses" prefHeight="26.0" prefWidth="119.0" style="-fx-background-color: D8AF7F;" text="View expenses">
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font></Button>
               <Button fx:id="changeToIncomeBarGraph" layoutX="422.0" layoutY="283.0" mnemonicParsing="false" onAction="#changeToIncomeBarGraphButtonPushed" prefHeight="26.0" prefWidth="154.0" style="-fx-background-color: D8AF7F;" text="Change to bar graph">
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font></Button>
               <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#goHome" style="-fx-background-color: transparent;">
                  <graphic>
                     <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@logo.png" />
                        </image>
                     </ImageView>
                  </graphic></Button>
               <Label layoutX="65.0" layoutY="72.0" text="Income Graph" textFill="#8e7d69">
                  <font>
                     <Font name="Arial Bold" size="25.0" />
                  </font>
               </Label>
            </children>
         </AnchorPane>
      </children>
   </GridPane>
</Scene>
