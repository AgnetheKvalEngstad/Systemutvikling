<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Scene xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="no.ntnu.idatt1002.demo.income.IncomeController">
   <GridPane>
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      </rowConstraints>
      <children>
         <AnchorPane prefHeight="459.0" prefWidth="587.0">
            <children>
               <PieChart fx:id="pieChart" layoutX="35.0" layoutY="85.0" prefHeight="220.0" prefWidth="229.0" title="Income graph" />
               <CheckBox fx:id="salaryChecked" layoutX="276.0" layoutY="145.0" mnemonicParsing="false" onAction="#salaryChecked" text="Salary" />
               <CheckBox fx:id="investmentChecked" layoutX="276.0" layoutY="186.0" mnemonicParsing="false" onAction="#investmentChecked" text="Investment" />
               <CheckBox fx:id="loanChecked" layoutX="276.0" layoutY="221.0" mnemonicParsing="false" onAction="#loanChecked" text="Loan" />
               <CheckBox fx:id="otherIncomeChecked" layoutX="276.0" layoutY="257.0" mnemonicParsing="false" onAction="#otherIncomeChecked" text="Other" />
               <Button fx:id="editIncomeCategory" layoutX="423.0" layoutY="133.0" mnemonicParsing="false" onAction="#editCategoryButtonPushed" prefHeight="26.0" prefWidth="107.0" text="Edit categories" />
               <Button fx:id="editIncome" layoutX="424.0" layoutY="182.0" mnemonicParsing="false" onAction="#editIncomeButtonPushed" prefHeight="26.0" prefWidth="107.0" text="Edit income" />
               <Button fx:id="viewExpenses" layoutX="423.0" layoutY="233.0" mnemonicParsing="false" onAction="#goToExpenses" prefHeight="26.0" prefWidth="107.0" text="View expenses" />
               <Button fx:id="changeToIncomeBarGraph" layoutX="422.0" layoutY="283.0" mnemonicParsing="false" onAction="#changeToIncomeBarGraphButtonPushed" prefHeight="26.0" prefWidth="137.0" text="Change to bar graph" />
               <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#goHome" text="Home" />
            </children>
         </AnchorPane>
      </children>
   </GridPane>
</Scene>
